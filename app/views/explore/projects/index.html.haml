.clearfix
  .pull-left
    = form_tag explore_projects_path, method: :get, class: 'form-inline form-tiny' do |f|
      .form-group
        = search_field_tag :search, params[:search], placeholder: "按名称过滤", class: "form-control search-text-input input-mn-300", id: "projects_search"
      .form-group
        = submit_tag '搜索', class: "btn btn-primary wide"

  .pull-right
    .dropdown.inline
      %a.dropdown-toggle.btn{href: '#', "data-toggle" => "dropdown"}
        %span.light 排序：
        - if params[:sort] == 'newest'
          最新的
        - elsif params[:sort] == 'oldest'
          最旧的
        - elsif params[:sort] == 'recently_updated'
          最近更新
        - elsif params[:sort] == 'last_updated'
          最后更新
        - else
          名称
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to explore_projects_path(sort: nil) do
            名称
          = link_to explore_projects_path(sort: 'newest') do
            最新的
          = link_to explore_projects_path(sort: 'oldest') do
            最旧的
          = link_to explore_projects_path(sort: 'recently_updated') do
            最近更新
          = link_to explore_projects_path(sort: 'last_updated') do
            最后更新

%hr
.public-projects
  %ul.bordered-list.top-list
    = render @projects
    - unless @projects.present?
      .nothing-here-block 没有公开项目

  = paginate @projects, theme: "gitlab"
