.dashboard
  %section.activities.col-md-8.hidden-sm.hidden-xs
    - if current_user
      = render "events/event_last_push", event: @last_push
      = link_to dashboard_path, class: 'btn btn-tiny' do
        &larr; 回到仪表盘
      &nbsp;
    %span.cgray
      只显示
      = @group.name
      群组项目的事件
    %hr
    = render 'shared/event_filter'
    - if @events.any?
      .content_list
    - else
      .nothing-here-block 当前没有项目显示
    = spinner
  %aside.side.col-md-4
    .light-well.append-bottom-20
      = image_tag group_icon(@group.path), class: "avatar s90"
      .clearfix.light
        %h3.page-title
          = @group.name
        - if @group.description.present?
          %p
            = auto_link @group.description, link: :urls
    = render "projects", projects: @projects
    - if current_user
      .prepend-top-20
        = link_to group_path(@group, { format: :atom, private_token: current_user.private_token }), title: "动态" do
          %strong
            %i.icon-rss
            最新动态

    %hr
    = render 'shared/promo'
