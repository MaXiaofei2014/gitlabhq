.row
  .col-md-4
    .panel.panel-default
      .panel-heading
        SSH 密钥
      %ul.well-list
        %li
          %span.light 名称：
          %strong= @key.title
        %li
          %span.light 创建时间：
          %strong= @key.created_at.stamp("2011-12-31")

  .col-md-8
    %p
      %span.light 指纹：
      %strong= @key.fingerprint
    %pre.well-pre
      = @key.key

.pull-right
  = link_to '删除', profile_key_path(@key), data: {confirm: '确定要继续么？'}, method: :delete, class: "btn btn-remove delete-key"
