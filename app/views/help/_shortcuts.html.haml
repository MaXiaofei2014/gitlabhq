#modal-shortcuts.modal.hide{tabindex: -1}
  .modal-dialog
    .modal-content
      .modal-header
        %a.close{href: "#", "data-dismiss" => "modal"} ×
        %h4
          键盘快捷键
          %small
            = link_to '(显示全部)', '#', class: 'js-more-help-button'
      .modal-body.shortcuts-cheatsheet
        .col-lg-4
          %table.shortcut-mappings
            %tbody
              %tr
                %th
                %th 全局快捷键
              %tr
                %td.shortcut
                  .key s
                %td 焦点搜索
              %tr
                %td.shortcut
                  .key ?
                %td 显示本对话框
            %tbody
              %tr
                %th
                %th 项目文件浏览
              %tr
                %td.shortcut
                  .key
                    %i.fa.fa-arrow-up
                %td 选择向上
              %tr
                %td.shortcut
                  .key
                    %i.fa.fa-arrow-down
                %td 选择向下
              %tr
                %td.shortcut
                  .key 回车
                %td 打开选择

