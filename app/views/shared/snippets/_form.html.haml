.snippet-form-holder
  = form_for @snippet, url: url, html: { class: "form-horizontal snippet-form" } do |f|
    - if @snippet.errors.any?
      .alert.alert-danger
        %ul
          - @snippet.errors.full_messages.each do |msg|
            %li= msg

    .form-group
      = f.label :title, "标题", class: 'control-label'
      .col-sm-10= f.text_field :title, placeholder: "代码片段示例", class: 'form-control', required: true

    - unless @snippet.respond_to?(:project)
      .form-group
        = f.label "访问", class: 'control-label'
        .col-sm-10
          = f.label :private_true, class: 'radio-label' do
            = f.radio_button :private, true
            %span
              %strong 私有
              (只有自己能看到该代码片段)
          %br
          = f.label :private_false, class: 'radio-label' do
            = f.radio_button :private, false
            %span
              %strong 公开
              (Git 版本库用户可以看到该代码片段)

    .form-group
      .file-editor
        = f.label :file_name, "文件", class: 'control-label'
        .col-sm-10
          .file-holder.snippet
            .file-title
              = f.text_field :file_name, placeholder: "example.rb", class: 'form-control snippet-file-name', required: true
            .file-content.code
              %pre#editor= @snippet.content
              = f.hidden_field :content, class: 'snippet-file-content'

    .form-actions
      - if @snippet.new_record?
        = f.submit '创建代码片段', class: "btn-create btn"
      - else
        = f.submit '保存', class: "btn-save btn"

      - if @snippet.respond_to?(:project)
        = link_to "取消", project_snippets_path(@project), class: "btn btn-cancel"
      - else
        = link_to "取消", snippets_path(@project), class: "btn btn-cancel"

:javascript
  var editor = ace.edit("editor");
  $(".snippet-form-holder form").submit(function(){
    $(".snippet-file-content").val(editor.getValue());
  });
