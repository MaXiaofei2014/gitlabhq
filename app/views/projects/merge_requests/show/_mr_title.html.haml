%h3.page-title
  = "合并请求 ##{@merge_request.iid}"

  %span.pull-right.issue-btn-group
    - if can?(current_user, :modify_merge_request, @merge_request)
      - if @merge_request.open?
        .btn-group.pull-left
          %a.btn.btn-grouped.dropdown-toggle{ data: {toggle: :dropdown} }
            %i.fa.fa-download
            下载为
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Email 补丁", project_merge_request_path(@project, @merge_request, format: :patch)
            %li= link_to "差异文件",    project_merge_request_path(@project, @merge_request, format: :diff)

        = link_to '关闭', project_merge_request_path(@project, @merge_request, merge_request: { state_event: :close }), method: :put, class: "btn btn-grouped btn-close", title: "关闭合并请求"

        = link_to edit_project_merge_request_path(@project, @merge_request), class: "btn btn-grouped", id:"edit_merge_request" do
          %i.fa.fa-pencil-square-o
          编辑
      - if @merge_request.closed?
        = link_to '重新打开', project_merge_request_path(@project, @merge_request, merge_request: {state_event: :reopen }), method: :put, class: "btn btn-grouped btn-reopen reopen-mr-link", title: "重新打开合并请求"

.votes-holder.hidden-sm.hidden-xs
  #votes= render 'votes/votes_block', votable: @merge_request

.back-link
  = link_to project_merge_requests_path(@project) do
    &larr; 回到合并请求

  %span.prepend-left-20
    %span 从
    - if @merge_request.for_fork?
      %strong.label-branch<
        - if @merge_request.source_project
          = link_to @merge_request.source_project_namespace, project_path(@merge_request.source_project)
        - else
          \ #{@merge_request.source_project_namespace}
        \:#{@merge_request.source_branch}
      %span 到
      %strong.label-branch #{@merge_request.target_project_namespace}:#{@merge_request.target_branch}
    - else
      %strong.label-branch #{@merge_request.source_branch}
      %span 到
      %strong.label-branch #{@merge_request.target_branch}
