- if current_user
  .dropdown.pull-right
    %a.dropdown-toggle.btn.btn-sm{href: '#', "data-toggle" => "dropdown"}
      %i.fa.fa-bars
    %ul.dropdown-menu
      - if @project.issues_enabled && can?(current_user, :write_issue, @project)
        %li
          = link_to url_for_new_issue(@project, only_path: true), title: "新问题" do
            %i.fa.fa-fw.fa-exclamation-circle
            新问题
      - if @project.merge_requests_enabled && can?(current_user, :write_merge_request, @project)
        %li
          = link_to new_namespace_project_merge_request_path(@project.namespace, @project), title: "新合并请求" do
            %i.fa.fa-fw.fa-tasks
            新合并请求
      - if @project.snippets_enabled && can?(current_user, :write_snippet, @project)
        %li
          = link_to new_namespace_project_snippet_path(@project.namespace, @project), title: "新代码片段" do
            %i.fa.fa-fw.fa-file-text-o
            新代码片段
      - if can?(current_user, :admin_project_member, @project)
        %li
          = link_to namespace_project_project_members_path(@project.namespace, @project), title: "新项目成员" do
            %i.fa.fa-fw.fa-users
            新项目成员
      - if can? current_user, :push_code, @project
        %li.divider
        %li
          = link_to new_namespace_project_branch_path(@project.namespace, @project) do
            %i.fa.fa-fw.fa-code-fork
            新分支
        %li
          = link_to new_namespace_project_tag_path(@project.namespace, @project) do
            %i.fa.fa-fw.fa-tag
            新标签


